{
  "root": true,
  "env": {
    "browser": true,
    "es2022": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "extends": [
    "eslint:recommended",
    "next/core-web-vitals"
  ],
  "rules": {
    "no-unused-vars": "warn",
    "react/no-unescaped-entities": "warn",
    "no-useless-escape": "warn",
    "no-empty": "warn",
    "no-undef": "error"
  },
  "ignorePatterns": [
    "build/",
    ".next/",
    "dist/",
    "coverage/",
    "node_modules/"
  ]
}
